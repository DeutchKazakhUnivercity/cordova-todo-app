<?xml version='1.0' encoding='utf-8'?>
<widget id="com.akurdyumov.todo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ToDo List</name>
    <description>
        A sample Apache Cordova application that display todo list.
    </description>
    <author email="kant2002@gmail.com" href="http://akurdyumov.com">
        Andrey Kurdyumov
    </author>
    <content src="index.html" />
    <access origin="*" />
    <engine name="android" version="4.0.0" />
    <engine name="browser" version="3.6.0" />
    <feature name="Whitelist">
        <param name="id" value="cordova-plugin-whitelist" />
        <param name="url" value="https://github.com/apache/cordova-plugin-whitelist.git#r1.0.0" />
    </feature>
    <feature name="Crosswalk WebView Engine">
        <param name="id" value="cordova-plugin-crosswalk-webview" />
        <param name="url" value="https://github.com/MobileChromeApps/cordova-plugin-crosswalk-webview.git#1.0.0" />
    </feature>
</widget>
